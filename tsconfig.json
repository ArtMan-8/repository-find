{
	"include": ["./src"],
	"compilerOptions": {
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"strict": true,
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"@components/*": ["src/components/*"],
			"@pages/*": ["./src/pages/*"],
			"@utils/*": ["utils/*"]
		}
	}
}
